<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>xml-dir</param-name>
        <param-value>WEB-INF</param-value>
    </context-param>
    <context-param>
        <param-name>xml-name</param-name>
        <param-value>db.xml</param-value>
    </context-param>
    <servlet>
        <servlet-name>Servlet1</servlet-name>
        <servlet-class>com.example.JavaEEHelloWorld.Servlet1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet1</servlet-name>
        <url-pattern>/load</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LikeUnlikeServlet</servlet-name>
        <servlet-class>com.example.JavaEEHelloWorld.LikeUnlikeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LikeUnlikeServlet</servlet-name>
        <url-pattern>/like-unlike</url-pattern>
    </servlet-mapping>
</web-app>